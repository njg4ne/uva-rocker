{
  "name": "Rocker Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "R",
  "workspaceFolder": "/home/rstudio/src",
  "customizations": {
    "vscode": {
      "settings": {
        "r.plot.useHttpgd": true
      },
      "extensions": [
        "REditorSupport.r",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-speech",
        "janisdd.vscode-edit-csv"
      ]
    }
  }
}